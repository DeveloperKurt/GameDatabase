<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/module_dialog"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/iv_module"
        android:layout_width="168dp"
        android:layout_height="144dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/module_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/module_tv_installation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:text="@string/library_installed_on"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_module"
        app:layout_constraintStart_toStartOf="@+id/iv_module"
        app:layout_constraintTop_toBottomOf="@+id/iv_module" />

    <TextView
        android:id="@+id/module_tv_current_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/current_time"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/module_tv_installation_date"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/module_tv_installation_date"
        app:layout_constraintTop_toBottomOf="@+id/module_tv_installation_date" />

    <TextView
        android:id="@+id/module_tv_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="48dp"
        android:text="17:04:04 06 Mar 2021"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/module_tv_current_date_text"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/module_tv_current_date_text"
        app:layout_constraintTop_toBottomOf="@+id/module_tv_current_date_text"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>